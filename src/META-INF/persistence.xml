<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="mj-vendas" transaction-type="RESOURCE_LOCAL">
    <class>br.com.mjailton.vendasjsf.modelo.Cliente</class>
    <class>br.com.mjailton.vendasjsf.modelo.Funcionario</class>
    <class>br.com.mjailton.vendasjsf.modelo.Produto</class>
     <class>br.com.mjailton.vendasjsf.modelo.Profornecedor</class>
      <class>br.com.mjailton.vendasjsf.modelo.Compra</class>
      <class>br.com.mjailton.vendasjsf.modelo.Formpagamento</class>
      <class>br.com.mjailton.vendasjsf.modelo.Fornecedor</class>
      <class>br.com.mjailton.vendasjsf.modelo.Medida</class>
      <class>br.com.mjailton.vendasjsf.modelo.Movimento</class>
      <class>br.com.mjailton.vendasjsf.modelo.Pagamento</class>
      <class>br.com.mjailton.vendasjsf.modelo.Saidadinheiro</class>
      <class>br.com.mjailton.vendasjsf.modelo.Servico</class>
      <class>br.com.mjailton.vendasjsf.modelo.Vendporvendedor</class>
       <class>br.com.mjailton.vendasjsf.modelo.Usuario</class>
        <class>br.com.mjailton.vendasjsf.modelo.Venda</class>
    <properties>
    <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
    <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/vidracaria" />
    <property name="javax.persistence.jdbc.user" value="postgres" />
    <property name="javax.persistence.jdbc.password" value="postgres" />
    
    <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
    
    <property name="hibernate.show_sql" value="true"/>
    <property name="hibernate.format_sql" value="false"/>
    
    <property name="hibernate.hbm2ddl.auto" value="update"/>
    
    
    </properties>
    </persistence-unit>
</persistence>